<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    app:cardElevation="7dp"
    app:cardCornerRadius="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        >
        <ImageView
            android:id="@+id/icon_categories"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_pie_chart_white_36"
            android:background="@color/teal_200"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/name_categories_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="name_card"/>
        <TextView
            android:id="@+id/name_categories_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="label"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/used_money_item"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="right|center"
        android:layout_marginRight="10dp"
        android:text="-20,000"
        android:textColor="@color/black"/>

</LinearLayout>
</androidx.cardview.widget.CardView>