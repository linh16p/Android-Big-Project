<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<androidx.cardview.widget.CardView
    android:layout_marginStart="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/imgItemChart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_flight_takeoff_white_36dp"
        android:background="@color/purple_500"/>
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvItemNameCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name cat"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemPercent"
                android:text="0%"
                android:layout_toEndOf="@id/tvItemNameCat"
                android:textColor="@color/teal_700"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemCount"
                android:text="0 count"
                android:layout_toEndOf="@id/tvItemPercent"
                android:textColor="@color/teal_700"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemMonneyUse"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="50"/>

    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>
