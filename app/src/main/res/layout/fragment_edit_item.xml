<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/design_default_color_primary"
        android:tint="@color/white">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="?attr/homeAsUpIndicator"
            android:id="@+id/bt_back"
            android:backgroundTint="@color/design_default_color_primary"
            app:tint="@color/white"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
    android:text="Detail"
    android:textColor="@color/white"
    android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/bt_Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
        android:layout_gravity="end"
            android:backgroundTint="@color/design_default_color_primary"
            app:tint="@color/white"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="15dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:elevation="10dp"
                >
                <ImageView
                    android:id="@+id/imgDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_pie_chart_white_36"
                    android:background="@color/teal_200"
                    android:contentDescription="Categories" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_catDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/teal_700"
                android:layout_marginStart="50dp"
                android:text="food(name categories)" />
            <TextView
                android:id="@+id/tv_monneyDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/teal_700"
                android:layout_centerVertical="true"
                android:text="-15000"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="50.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal">
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/round_grid_view_white_36"
                    android:tint= "@color/teal_200"
                    tools:ignore="UseAppTint"
                    android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/teal_700"
                android:layout_marginStart="50dp"
                android:text="category" />
            <TextView
                android:id="@+id/Type_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/teal_700"
                android:layout_centerVertical="true"
                android:text="expenses"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="101dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_event_white_36"
                android:tint= "@color/teal_200"
                tools:ignore="UseAppTint"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/teal_700"
                android:layout_marginStart="50dp"
                android:text="date" />
            <TextView
                android:id="@+id/dateTimeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/teal_700"
                android:layout_centerVertical="true"
                android:text="date"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="151.8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/round_assignment_white_36"
                android:tint= "@color/teal_200"
                tools:ignore="UseAppTint"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/teal_700"
                android:layout_marginStart="50dp"
                android:text="remark" />
            <TextView
                android:id="@+id/remarkDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/teal_700"
                android:layout_centerVertical="true"
                android:text="note"
                android:layout_gravity="center_vertical"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp">
        <LinearLayout android:orientation="horizontal"
            android:background="@color/design_default_color_primary"
            android:layout_width="150dp"
            android:gravity="center_horizontal"
            android:id="@+id/bt_Edit"
            android:layout_height="35dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_create_white_36"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="20dp"
                android:text="EDIT"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>