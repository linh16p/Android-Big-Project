<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Setting">
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3D5AFE">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/homeAsUpIndicator"
        android:background="#3D5AFE"
        android:tint="@color/white"
        android:id="@+id/bt_back_setting"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="40dp"/>
</androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget Setting"
        android:textColor="#3D5AFE"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <RelativeLayout
        android:id="@+id/rl_budget"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="20sp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sw_budget"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:checked="true"
            app:thumbTint="#3D5AFE"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_monneybank">
        <ImageView
            android:id="@+id/dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_monetization_on_black_24"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            />
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:layout_toEndOf="@id/dollar"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/monney_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000000000"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/dollar"
            android:textColor="@color/teal_700"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="20sp"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sw_balance"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        app:thumbTint="#3D5AFE"/>
    </RelativeLayout>
    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="period"
        android:textColor="@color/teal_700"/>
    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/current_date_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this month"
        android:textColor="@color/teal_700"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10F6E0"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_dateStart_monneybank">
        <ImageView
            android:id="@+id/icon_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_event_note_white_18"
            android:layout_marginStart="20dp"
            app:tint="@color/black"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/Set_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set start date"
            android:layout_toEndOf="@id/icon_date"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/monney_bank_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/icon_date"
            android:textColor="@color/teal_700"/>
    </RelativeLayout>
</LinearLayout>